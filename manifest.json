{
  "manifest_version": 3,
  "name": "Extension Manager",
  "version": "1.0",
  "description": "Manage all installed extensions with ease.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "management",
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
